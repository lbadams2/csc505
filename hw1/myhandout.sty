% for adding comments and highlighting to the text
\providecommand{\cmtM}[1]{\marginpar{\small\textcolor{red}{\parbox{0.75in}{#1}}}} % in margin
\providecommand{\HL}[1]{\textbf{\textcolor{red}{#1}}}            % highlight
\providecommand{\cmt}[1]{\textsf{\textcolor{red}{[#1]}}}         % inline

%% Headings (smaller fonts than article style)
\def\section{\@startsection {section}{1}{\z@}{
2ex plus 4ex minus 
-5ex
}{
3pt plus 2pt
}{\bf}}
\def\subsection{\@startsection{subsection}{2}{\z@}{-3.25ex plus -1ex minus 
 -.2ex}{1.5ex plus .2ex}{\bf}}
