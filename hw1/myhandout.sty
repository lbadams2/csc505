\newcommand{\SEC}[1]{\section*{#1}}

%% Page headings (the Header command needs to appear immediately after
%%	"\begin{document}" and "\label{last}" needs to precede
%%	"\end{document}")
\pagestyle{myheadings}
\thispagestyle{empty}

\newcommand{\Header}[2]{
\markright{#1 \hfill #2 \hfill page\hspace{0.5em}}
\thispagestyle{empty}
{\sl #1 \hfill #2 \hfill page 1 of \pageref{last}}\par
}

\newcommand{\HeaderWithCopyright}[2]{
\renewcommand{\thefootnote}{$\fnsymbol{footnote}$}
\renewcommand{\footnoterule}{\hrulefill}
\Header{#1}{#2\protect\footnotetext{\copyright\
Dr.~Matthias~F.~Stallmann, \number\year:
All rights reserved.}}
}

\newcommand{\HeaderWithFixedCopyright}[3]{
\renewcommand{\thefootnote}{$\fnsymbol{footnote}$}
\renewcommand{\footnoterule}{\hrulefill}
\Header{#1}{#2\protect\footnotetext{\copyright\
Dr.~Matthias~F.~Stallmann #3:
All rights reserved.}}
}

\newcommand{\TestHeader}[2]{
\markright{#1 \hfill #2 \hfill UID: 
\underline{\hspace{35mm}}
~page~}
\thispagestyle{empty}
{\sl #1 \hfill #2 \hfill UID: \underline{\hspace{35mm}}}
\par\medskip
}

